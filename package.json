{
  "name": "gitfitbot",
  "version": "1.7.0",
  "description": "Discord bot for GitFitCode needs, written in TypeScript.",
  "scripts": {
    "build": "npm i && tsc -p tsconfig.production.json",
    "clear-commands": "npm run build && node ./dist/scripts/clearRegisteredCommands.js",
    "clear-events": "npm run build && node ./dist/scripts/clearScheduledEvents.js",
    "deploy": "npm run build && pm2 start dist/Bot.js --name \"GitFitBot\"",
    "dev": "npm i && ts-node src/Bot.ts",
    "lint": "eslint .",
    "pre-build": "rm -rf ./dist",
    "release": "release-it",
    "release-dry": "release-it --dry-run",
    "start": "npm run build && node dist/Bot.js",
    "test": "echo 'No tests yet'."
  },
  "author": "GitFitCode",
  "license": "GNU GPLv3",
  "dependencies": {
    "@discordjs/rest": "latest",
    "@notionhq/client": "latest",
    "dayjs": "latest",
    "discord-api-types": "latest",
    "discord-tictactoe": "latest",
    "discord.js": "latest",
    "dotenv": "latest",
    "gfc-vault-config": "git+https://git@github.com/GitFitCode/gfc-vault-config.git",
    "undici": "latest"
  },
  "devDependencies": {
    "@commitlint/cli": "latest",
    "@commitlint/config-conventional": "latest",
    "@release-it/conventional-changelog": "latest",
    "@types/express": "latest",
    "@types/node": "latest",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "eslint": "latest",
    "eslint-config-airbnb-base": "latest",
    "eslint-config-airbnb-typescript": "latest",
    "husky": "latest",
    "release-it": "latest",
    "ts-node": "latest",
    "tslib": "latest",
    "typescript": "latest"
  },
  "engines": {
    "node": "16.x",
    "npm": "8.x"
  }
}
